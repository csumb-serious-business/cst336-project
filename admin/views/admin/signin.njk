{% extends "base.njk" %}
{% set title="Sample Project home" %}

{% block main %}
    <h1>Login Screen</h1>
    <form method="POST">
        <label for="username">User name:</label>
        <input type="text" name="username" id="username">
        <br>
        <label for="password">Password:</label>
        <input type="password" name="password" id="password">
        <br>
        <button>Login!</button>
    </form>
    {# todo sould be ajax #}
    {% if loginError %}
        <h3 class="error">Wrong credentials!</h3>
    {% endif %}
{% endblock %}